<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    android:orientation="vertical"
    tools:context="com.example.stockmanage.activity.IncomingActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                <LinearLayout
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="收货单号" />
                   <com.example.stockmanage.view.SpinerPopWindow
                       android:id="@+id/spwIncomingBill"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                        android:visibility="gone"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="供 应 商" />
                        <EditText
                            android:id="@+id/etSupplierID"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            />
                    </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tvSupplier"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="供 应 商" />
                    <EditText
                        android:textSize="15sp"
                        android:id="@+id/etSupplier"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        />
                </LinearLayout>
                  <LinearLayout
                      android:visibility="gone"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="仓库ID" />
                        <EditText
                            android:id="@+id/etStockID"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            />
                    </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="仓       库"
                        android:layout_alignBottom="@id/etSupplier" />
                   <com.example.stockmanage.view.SpinerPopWindow
                    android:id="@+id/spwIncomingStock"
                    android:textSize="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                </LinearLayout>

                 <LinearLayout
                        android:visibility="gone"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="产品名称" />
                        <EditText
                         android:id="@+id/ProdNm"
                         android:layout_width="200dp"
                         android:layout_height="wrap_content"
                         android:layout_centerHorizontal="true"
                         />
                 </LinearLayout>
                 <LinearLayout
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tvBarcode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="条码扫描" />
                    <EditText
                        android:singleLine="true"
                        android:textSize="15sp"
                        android:id="@+id/etBarcode"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        />
                </LinearLayout>
                <LinearLayout
                    android:visibility="gone"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="物       料" />
                    <EditText
                        android:textSize="15sp"
                        android:enabled="false"
                        android:id="@+id/etBOM"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        />
                </LinearLayout>
               <LinearLayout
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                   <LinearLayout
                       android:orientation="horizontal"
                       android:layout_weight="1"
                       android:layout_width="0dp"
                       android:layout_height="40dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="规格" />
                    <EditText
                        android:textSize="15sp"
                        android:enabled="false"
                        android:id="@+id/etSpecification"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true" />
                </LinearLayout>
                   <LinearLayout
                       android:orientation="horizontal"
                       android:layout_weight="1"
                       android:layout_width="0dp"
                       android:layout_height="40dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="等级" />
                    <EditText
                        android:textSize="15sp"
                        android:enabled="false"
                        android:id="@+id/etLevel"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true" />
                </LinearLayout>
                   <LinearLayout
                       android:orientation="horizontal"
                       android:layout_weight="1"
                       android:layout_width="0dp"
                       android:layout_height="40dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="宽幅" />
                    <EditText
                        android:textSize="15sp"
                        android:enabled="false"
                        android:id="@+id/etWide"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true" />
                </LinearLayout>
            </LinearLayout>
                    <LinearLayout
                        android:background="#AAAAAA"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                         <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            >
                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:text="序号" />
                    <TextView
                        android:id="@+id/tvName"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:text="物料名称"
                        />
                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:text="未收数量"
                        />
                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:text="已收数量"
                        />
                </LinearLayout>
                        </LinearLayout>
                        <ListView
                            android:gravity="center"
                            android:id="@+id/lvListData"
                            android:layout_width="match_parent"
                            android:layout_height="180dp"
                           />
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/submit"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="提交"/>
                    <Button
                    android:visibility="gone"
                    android:id="@+id/submit2"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="明细"/>
                </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
